<form class="form-group" action="/sign_up" method="post">
  <div>
    <label for="username">Username:</label>
    <input type="text" name="username" id="username">
  </div>
  <div>
    <label for="name">Name:</label>
    <input type="text" name="name" id="name">
  </div>
  <div>
    <label for="image">Profile photo URL:</label>
    <input type="text" name="image" id="image">
  </div>
  <div>
    <label for="password">Password:</label>
    <input type="text" name="password" id="password">
  </div>
  <div>
    <label for="passwordConfirm">Type your password again:</label>
    <input type="text" name="passwordConfirm" id="passwordConfirm">
    <script type="text/javascript">
      $('#passwordConfirm').bind("cut copy paste",function(e){
        e.preventDefault();
      });
    </script>
  </div>
  <% if (params.fetch('password').!=(params.fetch('passwordConfirm')))%>
      <% alert("Your passwords don't match. Please try again") %>
  <% else %>
  <button type="submit" class="btn btn-success" name="button">Sign-up</button>
  <% end %>
</form>
